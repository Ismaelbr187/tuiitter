<div class="container">
    <% if user_signed_in? %>
        <%= render 'tweets/form', tweet: @tweet %>
    <% end %>
</div>

<div class="row">
    <% @tweets.each do |tweet| %>
        <div class="col-12 border border-info p-3 mt-3">
            <%= image_tag (tweet.user.photo_url), class: "avatar-in-tweet rounded" %>
            <%= tweet.content %>
            <hr/>
            <%= tweet.likes.count %> likes | 0 retweets
        </div>
    <% end %>

    <%= paginate @tweets %>
</div>
